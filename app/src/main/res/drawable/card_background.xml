<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Umplerea cardului -->
    <solid android:color="#FFFFFF" />

    <!-- Colțuri rotunjite -->
    <corners android:radius="8dp" />

    <!-- Margine discretă (stroke) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding intern (opțional, dar recomandat) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>