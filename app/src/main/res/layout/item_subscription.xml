<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sablon_urbis_pass_card"
    android:padding="24dp">

    <!-- Logo în stânga sus -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/urbisspass"
        android:contentDescription="Urbis Pass Logo"
        android:scaleType="fitCenter" />

    <!-- Nume sub logo -->
    <TextView
        android:id="@+id/tvNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume Prenume"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@id/ivLogo"
        android:layout_alignStart="@id/ivLogo"
        android:layout_marginTop="8dp" />

    <!-- Status deasupra expirării -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activ"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_above="@id/tvExpiry"
        android:layout_alignEnd="@id/tvExpiry"
        android:layout_marginBottom="4dp" />

    <!-- Expirare în colțul dreapta jos -->
    <TextView
        android:id="@+id/tvExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiră: 12/2025"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>